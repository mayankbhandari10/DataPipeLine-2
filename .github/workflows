name: Run Python Script and Push Changes

on:
  push:
    branches:
      - master  # Use 'master' as the trigger branch

jobs:
  run-script:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: 3.8  # Specify your Python version

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt  # Update with your requirements file name

    - name: Run Python script
      run: python DataExtract.py  # Update with the actual path to your script

    - name: Commit and push changes
      run: |
        git config user.name "GitHub Actions"
        git config user.email "actions@github.com"
        git add .
        git commit -m "Automated script execution"
        git push origin ${{ github.ref }}
